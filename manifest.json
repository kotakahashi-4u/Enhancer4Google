{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "downloads"
  ],
  "background": {
    "service_worker": "public/js/background.js"
  },
  "host_permissions": [
    "https://notebooklm.google.com/*",
    "https://docs.google.com/presentation/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "public/options.html",
    "default_icon": {
      "16": "public/image/icon16.png",
      "48": "public/image/icon48.png",
      "128": "public/image/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "public/js/lib/pdf.worker.min.js",
        "public/image/icon48.png"
      ],
      "matches": ["https://docs.google.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://notebooklm.google.com/*"
      ],
      "js": [
        "public/js/notebooklm-content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "public/js/gemini-content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://chat.google.com/*",
        "https://mail.google.com/*"
      ],
      "js": [
        "public/js/chat-content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://docs.google.com/presentation/*"
      ],
      "js": [
        "public/js/lib/pdf.min.js",
        "public/js/lib/jszip.min.js",
        "public/js/slides-content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "public/image/icon16.png",
    "48": "public/image/icon48.png",
    "128": "public/image/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
  }
}